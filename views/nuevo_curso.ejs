<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>
<hr><hr>


<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-offset-1 col-xs-12 col-xs-offset-0 text-left">
      <h1><%= titulo %></h1>


      <form action="/crear" method="post">
        <div class="form-group">
          <label for="">Nombre del Curso</label>
          <input type="text" name="nombrecurso">
        </div>
        <div class="form-group">
          <label for="">Descripcion</label>
          <input type="text" name="descripcion">
        </div>
        <hr>
        <div class="form-group" >
          <div class="col-xs-6" id="lista-pasos">
            <input class="form-control" type="text" name="paso" placeholder="Escriba el contenido del paso" required>
          </div>
          <div class="col-xs-6" id="lista-adjuntos">
            <input type="file" class="form-control" name="adjunto" >
          </div>
          <div class="clearfix"></div>
          <hr>
        </div>
        <div class="form-group text-right">
          <!-- <label for="Pasos">Pasos</label><br> -->
          <div class="btn-group">
            <button class="btn btn-info btn-xs" id="btn-agregar">Agregar paso</button>
            <button class="btn btn-info btn-xs" id="btn-quitar">Quitar Paso</button>
          </div>
          <hr>
        </div>
        <div class="form-group">
          <input type="submit" value="Subir Curso" class="btn btn-success btn-block">
        </div>
      </form>
    </div>
  </div>
</div>

<% include ./partials/footer.ejs %>
