<% include ./partials/header.ejs %>
<% include ./partials/nav.ejs %>
<hr><hr>


<div class="container">
  <div class="row">
    <div class="col-sm-10 col-md-offset-1 col-xs-12 col-xs-offset-0 text-center">
      <h1><%= titulo %></h1>


      <form action="/crear" method="post">
        <div class="form-group">
          <label for="">Nombre del Curso</label>
          <input type="text" name="nombrecurso">
        </div>
        <div class="form-group">
          <label for="">Descripcion</label>
          <input type="text" name="descripcion">
        </div>
        <div class="form-group" >
          <label for="Pasos">Pasos</label><br>
          <div class="btn-group">
            <button class="btn btn-info btn-xs" id="btn-agregar">Agregar paso</button>
            <button class="btn btn-info btn-xs" id="btn-quitar">Quitar Paso</button>
          </div>
          <hr>
        </div>
        <div class="form-group" id="lista-pasos">
          <input class="form-control" type="text" name="pasos" placeholder="Escriba el contenido del paso">
        </div>
        <div class="form-group">
          <input type="submit" value="Subir Curso" class="btn btn-success">
        </div>
      </form>
    </div>
  </div>
</div>

